<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorBackground"
        android:elevation="0dp"
        android:theme="@style/ToolBarStyle" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="225dp">

                <com.jakubhekal.datausage.views.ProgressBarView
                    android:id="@+id/daily_usage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/space"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textBigTitle="@string/today">

                </com.jakubhekal.datausage.views.ProgressBarView>

                <Space
                    android:id="@+id/space"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.jakubhekal.datausage.views.ProgressBarView
                    android:id="@+id/monthly_usage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/space"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textBigTitle="@string/this_period"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.5"
                android:background="?attr/colorSecondaryText" />

            <com.jakubhekal.datausage.views.LineView
                android:id="@+id/period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageIcon="@drawable/icon_duration"
                app:textInfo="---"
                app:textTitle="@string/period_end_title">

            </com.jakubhekal.datausage.views.LineView>

            <com.jakubhekal.datausage.views.LineView
                android:id="@+id/apps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageIcon="@drawable/icon_apps"
                app:textInfo="@string/apps_info"
                app:textTitle="@string/apps_title">

            </com.jakubhekal.datausage.views.LineView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.5"
                android:background="?attr/colorSecondaryText" />

            <com.jakubhekal.datausage.views.LineView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageIcon="@drawable/icon_settings"
                app:textInfo="@string/settings_info"
                app:textTitle="@string/settings_title"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.5"
                android:background="?attr/colorSecondaryText" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>