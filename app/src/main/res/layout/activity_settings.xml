<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.SettingsActivity">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?attr/colorBackground"
        android:elevation="0dp"
        android:theme="@style/ToolBarStyle"
        app:popupTheme="@style/menu_item"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:background="?attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jakubhekal.datausage.views.LineView
                android:id="@+id/setting_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageIcon="@drawable/icon_theme"
                app:textTitle="@string/theme_title"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.5"
                android:background="?attr/colorSecondaryText" />

            <com.jakubhekal.datausage.views.LineView
                android:id="@+id/setting_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageIcon="@drawable/icon_limit"
                app:textInfo="@string/limit_info"
                app:textTitle="@string/limit_title"/>

            <com.jakubhekal.datausage.views.LineView
                android:id="@+id/setting_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:imageIcon="@drawable/icon_notifications"
                app:textInfo="@string/notifications_info"
                app:textTitle="@string/notifications_title"/>

            <com.jakubhekal.datausage.views.LineView
                android:id="@+id/setting_permissions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:imageIcon="@drawable/icon_permissions"
                app:textInfo="@string/activity_info_permissions"
                app:textTitle="@string/activity_title_permissions" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.5"
                android:background="?attr/colorSecondaryText" />

            <com.jakubhekal.datausage.views.LineView
                android:id="@+id/github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageIcon="@drawable/icon_github"
                app:textInfo="@string/github_info"
                app:textTitle="@string/github_title" />



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>