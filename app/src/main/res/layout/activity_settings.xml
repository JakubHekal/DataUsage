<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?attr/colorBackground"
        android:elevation="0dp"
        android:theme="@style/ToolBarStyle"
        app:popupTheme="@style/menu_item"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:background="?attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jakubhekal.datausage.views.SettingsView
                android:id="@+id/setting_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingIcon="@drawable/icon_theme"
                app:settingSwitchVisibility="8"
                app:settingTitle="@string/theme_title">

            </com.jakubhekal.datausage.views.SettingsView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.5"
                android:background="?attr/colorSecondaryText" />

            <com.jakubhekal.datausage.views.SettingsView
                android:id="@+id/setting_period"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:settingIcon="@drawable/icon_duration"
                app:settingSwitchVisibility="8"
                app:settingTitle="@string/period_title">

            </com.jakubhekal.datausage.views.SettingsView>

            <com.jakubhekal.datausage.views.SettingsView
                android:id="@+id/setting_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:settingIcon="@drawable/icon_limit"
                app:settingInfo="@string/limit_info"
                app:settingSwitchVisibility="8"
                app:settingTitle="@string/limit_title">

            </com.jakubhekal.datausage.views.SettingsView>

            <com.jakubhekal.datausage.views.SettingsView
                android:id="@+id/setting_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:settingIcon="@drawable/icon_notifications"
                app:settingInfo="@string/notifications_info"
                app:settingSwitchVisibility="8"
                app:settingTitle="@string/notifications_title">

            </com.jakubhekal.datausage.views.SettingsView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.5"
                android:background="?attr/colorSecondaryText" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>